<p id="notice"><%= notice %></p>

<h1>Ports</h1>

<table>
  <thead>
    <tr>
      <th>Port number</th>
      <th>Name</th>
      <th>Description</th>
      <th>Portable</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ports.each do |port| %>
      <tr>
        <td><%= port.port_number %></td>
        <td><%= port.name %></td>
        <td><%= port.description %></td>
        <td><%= port.portable_id %></td>
        <td><%= link_to 'Show', port %></td>
        <td><%= link_to 'Edit', edit_port_path(port) %></td>
        <td><%= link_to 'Destroy', port, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if params[:switch_id] %>
  <%= link_to 'New Port', new_switch_port_path %>
<% end %>

<% if params[:slot_id] %>
  <%= link_to 'New Port', new_slot_port_path %>
<% end %>
