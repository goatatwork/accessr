<%= form_with(model: [@switch, switch_config]) do |form| %>
  <% if switch_config.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(switch_config.errors.count, "error") %> prohibited this switch_config from being saved:</h2>

      <ul>
        <% switch_config.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-floating mb-3">
    <%= form.text_field :name, class: 'form-control', placeholder: 'name', aria: { describedby: 'nameInputHelp'} %>
    <%= form.label :name %>
    <div id="nameInputHelp" class="form-text">This is just a nickname for the backup.</div>
  </div>

  <div class="actions">
    <%= form.submit class: 'btn btn-success' %>
    <%= link_to 'Cancel', switch_path(@switch), class: 'btn btn-danger' %>
  </div>
<% end %>
