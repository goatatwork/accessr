<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Switch Type</th>
      <th>Management ip</th>
      <th class="d-none">Slots</th>
      <th class="d-none">Onboard Ports</th>
      <th>Total Ports</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% switches.each do |switch| %>
      <%= turbo_frame_tag dom_id(switch) do %>
        <tr>
          <td><%= link_to switch.name, switch %></td>
          <td><%= switch.manufacturer %> | <%= switch.model %></td>
          <td><%= switch.management_ip %></td>
          <td class="d-none"><%= switch.slots.count %></td>
          <td class="d-none"><%= switch.ports.count %></td>
          <td><%= switch.total_number_of_ports %></td>
          <td></td>
          <td><%= link_to 'Edit', edit_switch_path(switch) %></td>
          <td><%= link_to 'Destroy', switch, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
