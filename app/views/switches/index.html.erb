<p id="notice"><%= notice %></p>

<div class="row">
    <div class="col">
        <span class="h4">Switches</span>
        <%= link_to 'Add A Switch', new_switch_path, class: "btn btn-success float-end", type: "button" %>
    </div>
</div>

<div class="row">

  <div class="col">
    Name
  </div>

  <div class="col">
    Switch Type
  </div>

  <div class="col">
    Management ip
  </div>

  <div class="col d-none">
    <span>Slots</span>
  </div>

  <div class="col d-none">
    <span>Onboard Ports</span>
  </div>

  <div class="col">
    Total Ports
  </div>

  <div class="col">
  </div>
</div>

<div class="row">
  <div class="col">
    <%= turbo_stream_from "switches" %>
    <%= turbo_frame_tag "switches" do %>
      <%= render @switches %>
    <% end %>
  </div>
</div>
