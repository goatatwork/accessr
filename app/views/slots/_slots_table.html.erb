<table class="table table-primary">
  <thead>
    <tr>
      <th>Slot Number & Name</th>
      <th>Description</th>
      <th>Belongs To</th>
      <th>Ports</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% slots.each do |slot| %>
      <tr>
        <td><%= link_to "#{slot.slot_number} #{slot.name}", slot_path(slot) %></td>
        <td><%= slot.description %></td>
        <td><%= link_to slot.switch.name, slot.switch %></td>
        <td><%= slot.ports.count %></td>
        <td><%= link_to 'Edit', edit_slot_path(slot) %></td>
        <td><%= link_to 'Destroy', slot, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
