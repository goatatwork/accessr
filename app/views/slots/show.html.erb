<p id="notice"><%= notice %></p>

<p>
  <strong>Slot number:</strong>
  <%= @slot.slot_number %>
</p>

<p>
  <strong>Name:</strong>
  <%= @slot.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @slot.description %>
</p>

<p>
  <strong>Switch:</strong>
  <%= @slot.switch_id %>
</p>

<div class="row">
  <div class="col">
    <%= render "/ports/ports_table", ports: @slot.ports %>
  </div>
</div>

<%= link_to 'Edit', edit_slot_path(@slot), class: 'btn btn-success' %> |
<%= link_to 'Back', switch_slots_path(@slot.switch) %>
