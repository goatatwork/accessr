<div class="card">
  <div class="card-body">
    <h5 class="card-title text-center">
      <%= address.display_address_type %>
    </h5>
    <h6 class="card-subtitle mb-4 text-muted text-center small">

    </h6>

    <div class="row">
        <div class="col-auto">
          <ul class="list-unstyled mb-4">

            <li><%= address.address1 %></li>

            <% if address.address2.present? %>
            <li><%= address.address2 %></li>
            <% end %>

            <li>
              <%= address.city %>, <%= address.state %>  <%= address.postal_code %>
            </li>
          </ul>
        </div>
    </div>

    <div class="row">
        <div class="col text-center">
          <%= link_to "[Edit This Address]", edit_address_path(address), class: 'small fw-light' %>
        </div>
    </div>

  </div>
</div>
