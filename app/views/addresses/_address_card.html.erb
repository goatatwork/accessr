<div class="card">
  <div class="card-body">
    <h5 class="card-title text-center">
      Address card
    </h5>
    <h6 class="card-subtitle mb-4 text-muted text-center">
      some subtitle here
    </h6>

    <div class="row">
        <div class="col-auto">
          <ul class="list-group list-group-flush mb-4">
            <li class="list-group-item"><%= address.address1 %></li>
            <li class="list-group-item"><%= address.address2 %></li>
            <li class="list-group-item"><%= address.city %>, <%= address.state %>  <%= address.city %></li>
          </ul>
        </div>
    </div>

    <div class="row">
        <div class="col">
          <%= link_to "Edit This Address", edit_address_path(address) %>
        </div>
    </div>

  </div>
</div>
