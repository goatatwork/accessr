<div class="card">
  <div class="card-body">
    <h5 class="card-title text-center">
      Address card
    </h5>
    <h6 class="card-subtitle mb-4 text-muted text-center">
      some subtitle here
    </h6>

    <div class="row">
        <div class="col-auto">
          <ul class="list-unstyled mb-4">

            <li class="fst-italic">Billing Address</li>
            <li><%= address.address1 %></li>

            <% if address.address2.present? %>
            <li><%= address.address2 %></li>
            <% end %>

            <li>
              <%= address.city %>, <%= address.state %>  <%= address.postal_code %>
            </li>
          </ul>
        </div>
    </div>

    <div class="row">
        <div class="col">
          <%= link_to "Edit This Address", edit_address_path(address) %>
        </div>
    </div>

  </div>
</div>
