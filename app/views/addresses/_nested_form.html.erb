            <option value="WV">
            <option value="WI">
            <option value="WY">
          </datalist>
        </div>
      </div>
      <div class="col-auto">
        <div class="form-floating mb-3">
          <%= address_form.text_field :postal_code, class: 'form-control', placeholder: 'postal_code' %>
          <%= address_form.label :postal_code %>
        </div>
      </div>
  </div>
<% end %>
