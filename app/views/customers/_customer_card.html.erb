<div class="card">
  <div class="card-body">
    <h5 class="card-title text-center">
      <%= customer.full_name %>
    </h5>
    <h6 class="card-subtitle mb-4 text-muted text-center">
      <%= customer.company_name %>
    </h6>

    <div class="row">
      <div class="col">
        <ul class="list-group list-group-flush mb-4">
          <li class="list-group-item text-center">
            <%= pluralize(customer.locations.count, 'location') %>
          </li>
        </ul>
      </div>
    </div>

    <% if customer.address %>
      <div class="row">
        <div class="col">
          <ul class="list-unstyled mb-4">

            <li class="fst-italic">Billing Address</li>
            <li><%= customer.address.address1 %></li>

            <% if customer.address.address2.present? %>
            <li><%= customer.address.address2 %></li>
            <% end %>

            <li>
              <%= customer.address.city %>, <%= customer.address.state %>  <%= customer.address.postal_code %>
            </li>
          </ul>
        </div>
      </div>
    <% end %>

    <div class="row">
        <div class="col text-center">
          <%= link_to "[Edit This Customer]", edit_customer_path(customer), class: 'small fw-light fst-italic' %>
        </div>
    </div>

  </div>
</div>
