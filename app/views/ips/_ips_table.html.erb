<table class="table">
  <thead>
    <tr>
      <th>Address</th>
      <th>Pool</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% ips.each do |ip| %>
      <tr>
        <td><%= link_to ip.address, ip %></td>
        <td><%= ip.pool_id %></td>
        <td><%= link_to 'Edit', edit_ip_path(ip) %></td>
        <td><%= link_to 'Destroy', ip, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
